/*new.wxss  */

.top-menu{
  width:100%;
  height:60rpx;
  border-bottom:1px solid #ccc;
  display:flex;
  justify-content: center;
  line-height:60rpx;
  text-align:center;
}

.top-menu-item{
  width: 25%;
  height:100%;
  font-size:12px;
}

.on{
  border-bottom:2px solid #e50541;
}

.swiper-item{
  width:100%;
  height:100%;
}
.scrollView{
  width:100%;
  height:100%;
  background-color: #ccc;
}

/*贴子部份  */
.cell{
  width:98%;
  padding:10rpx 10rpx 0rpx 10rpx;
  background-color: white;  
  font-size:12px;
  margin-bottom: 5px;
}

.cell-refresh, .cell-loadmore{
  width:98%;
  height:50rpx;
  font-size:12px;
  text-align:center;
  line-height:50rpx;
  background-color: #ccc;
}

@import "../../comm/mainCell.wxss";